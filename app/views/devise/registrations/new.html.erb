<div class="registration-container d-flex flex-column align-items-center">
  <br>
  <div class="navbar-nav">
    <%= link_to 'AHOY!', home_index_path, class:"nav-brand", id: "signup-header"%>
  </div>
  <br>
  <div class="registration-card card shadow-lg p-4 text-center w-50">
      <h2>Sign Up</h2>
      <br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field d-flex justify-content-center">
          <%#= f.label :name %><br />
          <%= f.text_field :name, placeholder: 'Name', class: 'form-control text-center', style: 'width: 50%' %>
        </div>
        <br>

        <div class="field d-flex justify-content-center">
          <%#= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control text-center', style: 'width: 50%' %>
        </div>
        <br>

        <div class="field d-flex justify-content-center">
          <%#= f.label :password %>
          <%# if @minimum_password_length %>
          <!-- <em>(<%#= @minimum_password_length %> characters minimum)</em> -->
          <%# end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password (6 characters minimum)', class: 'form-control text-center', style: 'width: 50%' %>
        </div>
        <br>

        <div class="field d-flex justify-content-center">
          <%#= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'form-control text-center', style: 'width: 50%' %>
        </div>
        <br>

        <div class="actions">
          <%= f.submit "Sign Up", class: "btn sign-up-btn-dark", id: "signup-btn" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
  </div>
</div>
